@model List<ProcessListDto>

@{
    ViewData["Title"] = "MySendProcess";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>My Send Process</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Type</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Receiver</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Name</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Amount</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Transaction Date</th>
                                    @*<th class="text-secondary opacity-7"></th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Pro in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex px-2 py-1">
                                                @*  <div>
                                            <img src="../assets/img/team-2.jpg" class="avatar avatar-sm me-3" alt="user1">
                                            </div>*@
                                                <div class="d-flex flex-column justify-content-center">
                                                    <h6 class="mb-0 text-sm">@Pro.Type</h6>
                                                    @*<p class="text-xs text-secondary mb-0">john@creative-tim.com</p>*@
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@Pro.ReceiverPrc.No</p>
                                            @*<p class="text-xs text-secondary mb-0">Organization</p>*@
                                        </td>
                                        <td>
                                            <p class="text-xs font-weight-bold mb-0">@Pro.ReceiverPrc.User.FullName</p>
                                            @*<p class="text-xs text-secondary mb-0">Organization</p>*@
                                        </td>
                                        <td class="align-middle text-center text-sm">
                                            <span class="badge badge-sm bg-gradient-success">@Pro.Amount.ToString("0.0")</span>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="text-secondary text-xs font-weight-bold">@Convert.ToDateTime(Pro.CreatedAt).ToString("dd/MM/yyyy")</span>
                                        </td>
                                        @* <td class="align-middle">
                                    <a asp-controller="Dashboard" asp-area="Customer" asp-action="MyAccountTransactionDetail" asp-route-id="@Pro.Id" class="text-secondary font-weight-bold text-xs">Account Transaction Detail</a>
                                    </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


